<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Dribbblestyle">
        <item name="android:windowTranslucentNavigation">@bool/translucent_navigation</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="Swipeable" parent="Theme.Dribbblestyle">
        <item name="android:windowTranslucentNavigation">@bool/translucent_navigation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@drawable/bottom_shadow</item>
    </style>

    <style name="Translucent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>